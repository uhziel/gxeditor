{
  "name": "gxeditor",
  "version": "0.1.0",
  "description": "game xml editor",
  "homepage": "https://github.com/uhziel/gxeditor",
  "document": "https://uhziel.gitbook.io/gxeditor",
  "main": "app/main.js",
  "scripts": {
    "test": "none",
    "start": "electron .",
    "debug": "GXEDITOR_DEBUG=1 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "org.uhziel.gxeditor",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      "example",
      "!example/proj_read_config/read_config*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uhziel/gxeditor.git"
  },
  "keywords": [
    "game",
    "xml",
    "editor"
  ],
  "author": {
    "name": "uhziel",
    "email": "uhziel@gmail.com"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "ace-builds": "^1.4.3",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "iconv-lite": "^0.4.24",
    "js-beautify": "^1.8.8",
    "undo-manager": "^1.0.5"
  },
  "devDependencies": {
    "electron": "^3.0.9",
    "electron-builder": "^20.38.4"
  }
}
