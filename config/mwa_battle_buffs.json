{
    "MWABattleBuffs": {
        "cnName": "魔法学院竞技场战斗buffs",
        "children": [
            "MWABattleBuff"
        ]
    },
    "MWABattleBuff": {
        "cnName": "魔法学院竞技场战斗buff",
        "optional": true,
        "multi": true,
        "children": [
            "Groups",
            "Triggers",
            "Level"
        ],
        "attributes": {
            "sn": {
                "type": "INT",
                "default": 1,
                "min": 0,
                "max": 100,
                "desc": "id由实际跑时程序自动生成。sn不动态，id动态。"
            }
        }
    },
    "Groups": {
        "cnName": "buff组s",
        "optional": true,
        "children": [
            "Group"
        ]
    },
    "Group": {
        "cnName": "buff组",
        "multi": true,
        "attributes": {
            "id": {
                "type": "INT",
                "default": 1
            },
            "replace_priority": {
                "cnName": "替换优先级",
                "optional": true,
                "type": "INT",
                "default": 1
            }
        }
    },
    "Triggers": {
        "cnName": "触发器s",
        "children": [
            "Trigger"
        ]
    },
    "Trigger": {
        "cnName": "触发器",
        "multi": true,
        "children": [
            "ParaType"
        ],
        "attributes": {
            "type": {
                "cnName": "类型",
                "type": "ENUM",
                "enumList": [
                    { "value": 1, "caption": "buff拥有单位改变属性" },
                    { "value": 2, "caption": "buff拥有单位附加伤害" },
                    { "value": 3, "caption": "buff拥有单位被伤害" }
                ],
                "default": 1,
                "min": 0,
                "max": 100
            },
            "effect": {
                "cnName": "效果",
                "type": "ENUM",
                "enumList": [
                    { "value": 1, "caption": "生命值上限", "displayIf": {"type": 1} },
                    { "value": 2, "caption": "智力", "displayIf": {"type": 1}  },
                    { "value": 3, "caption": "智力系数", "displayIf": {"type": 1} },
                    { "value": 4, "caption": "暴击几率", "displayIf": {"type": 1} },

                    { "value": 1, "caption": "自己", "displayIf": {"type": 2} },
                    { "value": 2, "caption": "被伤害单位", "displayIf": {"type": 2} },
                    { "value": 3, "caption": "己方全体", "displayIf": {"type": 2} },
                    { "value": 4, "caption": "被伤害全体", "displayIf": {"type": 2} },
                    { "value": 5, "caption": "自己+被伤害单位", "displayIf": {"type": 2} },
                    { "value": 6, "caption": "己方全体+被伤害全体", "displayIf": {"type": 2} }
                ],
                "default": 1,
                "min": 0.0,
                "max": 200.0
            },
            "effect_i1": {
                "type": "INT",
                "default": 1,
                "min": 0.0,
                "max": 200.0
            },
            "effect_i2": {
                "type": "INT",
                "default": 1,
                "min": 0.0,
                "max": 200.0,
                "optional": true
            },
            "priority": {
                "cnName": "优先级",
                "desc": "数字越大优先级越高，取值0到99999。不填默认为0。",
                "type": "INT",
                "default": 1,
                "min": 0.0,
                "max": 200.0,
                "optional": true
            }
        }
    },
    "ParaType": {
        "cnName": "参数类型",
        "desc" : "如果前面加-(负号)，则转为负数。比如-1，则表示-Para1。",
        "multi": true,
        "attributes": {
            "value": {
                "type": "ENUM",
                "enumList": [
                    { "value": 1, "caption": "Para1。取对应mwa_battle_skills.xml加此buff的<Effect/>的第一Para。" },
                    { "value": 2, "caption": "Para2" },
                    { "value": 3, "caption": "Para3" },
                    { "value": 4, "caption": "Para4" },
                    { "value": 5, "caption": "Para5" },
                    { "value": 6, "caption": "Para6" },
                    { "value": 1000, "caption": "护盾生命值公式。受来源技能魔法类型、Para2(技能系数修正)影响。具体生命值公式参见策划案。" },
                    { "value": 1001, "caption": "荆棘护甲额外反弹伤害公式。具体公式参见策划案。" }
                ],
                "default": 1,
                "min": 0.0,
                "max": 200.0
            }
        }
    },
    "Level": {
        "multi": true,
        "children": [
            "Icon",
            "Eff",
            "Durations"
        ],
        "attributes": {
            "value": {
                "type": "INT",
                "default": 1,
                "min": 0.0,
                "max": 200.0
            }
        }
    },
    "Icon": {
        "optional": true,
        "attributes": {
            "value": {
                "type": "STRING",
                "default": "abc.png"
            }
        }
    },
    "Eff": {
        "optional": true,
        "attributes": {
            "value": {
                "type": "STRING",
                "default": "efg.eff"
            }
        }
    },
    "Durations": {
        "children": [
            "Duration"
        ]
    },
    "Duration": {
        "multi": true,
        "attributes": {
            "type": {
                "type": "ENUM",
                "enumList": [
                    { "value": 1, "caption": "en: bout | cn: 持续NUM回合数" },
                    { "value": 2, "caption": "持续NUM生效次数" }
                ],
                "default": 2
            },
            "value": {
                "type": "INT",
                "default": 1,
                "min": 0.0,
                "max": 200.0
            }
        }
    }
}